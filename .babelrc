{
	"presets": [["@babel/preset-env", { "targets": { "node": true } }]],
	"plugins": [
		"@babel/plugin-syntax-top-level-await",
		[
			"babel-plugin-module-resolver",
			{
				"root": ".",
				"alias": {
					"@models": "./src/database/models",
					"@config": "./src/config",
					"@services": "./src/app/services",
					"@styles": "./src/styles"
				}
			}
		]
	]
}
